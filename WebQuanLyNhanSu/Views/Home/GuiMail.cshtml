@{
    ViewBag.Title = "GuiMail";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container" style="background-color:ghostwhite">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    <form id="emailForm" style="margin-top:20px" action="@Url.Action("GuiMail", "Mail")" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="recipientEmail">Mã nhân viên người nhận:</label>
            <input type="text" name="id" class="form-control" id="id" placeholder="Nhập mã nhân viên" required>
        </div>
        <div class="form-group">
            <label for="emailSubject">Chủ đề:</label>
            <input type="text" name="emailSubject" class="form-control" id="emailSubject" placeholder="Nhập chủ đề email" required>
        </div>
        <div class="form-group">
            <label for="emailContent">Nội dung email:</label>
            <textarea name="emailContent" class="form-control" id="emailContent" rows="5" placeholder="Nhập nội dung email" required></textarea>
        </div>
        <button style="margin-bottom:20px" type="submit" class="btn btn-primary">Gửi Email</button>
    </form>
</div>
