@model IEnumerable<RewardsPenalty>

@{
    ViewBag.Title = "Xem Khen Thưởng và Phạt";
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS tùy chỉnh -->
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">Danh sách Khen Thưởng và Phạt</h2>
            <div class="row">
                <div class="col-md-6">
                    <h3>Khen Thưởng</h3>
                    <ul class="list-group">
                        @foreach (var item in Model.Where(k => k.Type == "Khen"))
                        {
                            <li class="list-group-item">Mã: @item.RewardPenaltyID - Số Tiền: @item.Amount - Lý Do: @item.Reason - Ngày: @item.Ngay.Value.ToString("dd/MM/yyyy")</li>
                        }
                    </ul>
                </div>
                <div class="col-md-6">
                    <h3>Phạt</h3>
                    <ul class="list-group">
                        @foreach (var item in Model.Where(k => k.Type == "Phạt"))
                        {
                            <li class="list-group-item">Mã: @item.RewardPenaltyID - Số Tiền: @item.Amount - Lý Do: @item.Reason - Ngày: @item.Ngay.Value.ToString("dd/MM/yyyy") </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

