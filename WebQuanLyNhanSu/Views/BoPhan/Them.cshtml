@model WebQuanLyNhanSu.Department

@{
    ViewBag.Title = "Thêm mới phòng ban";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Them", "BoPhan", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.TrangThai, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NgayThanhLap, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NgayThanhLap, new { htmlAttributes = new { @class = "form-control", type = "date" } })

                    @Html.ValidationMessageFor(model => model.NgayThanhLap, "", new { @class = "text-danger" })
                </div>
                <button style="font-family: VNI-Times;" type="submit" class="btn btn-primary">Thêm mới</button>
            }
        </div>
    </div>
</div>
