@model WebQuanLyNhanSu.Employee

@{
    ViewBag.Title = "Sửa Nhân Viên";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="container">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form action="@Url.Action("Edit", "NV")" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="card" style="height:920px">
                    <div class="card-body">
                        <h4 class="card-title">Thông tin cá nhân</h4>
                        <!-- Điền dữ liệu của nhân viên vào các input -->
                        <div class="mb-3">
                            <label for="firstName" class="form-label">Họ và tên đệm</label>
                            <input type="text" class="form-control" name="firstName" value="@Model.FirstName">
                        </div>
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Tên</label>
                            <input type="text" class="form-control" name="lastName" value="@Model.LastName">
                        </div>
                        <div class="mb-3">
                            <label for="birthDate" class="form-label">Ngày sinh</label>
                            <input type="date" class="form-control" name="birthDate" value="@Model.BirthDate.Value.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" name="address" value="@Model.Address">
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" name="phoneNumber" value="@Model.PhoneNumber">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" value="@Model.Email">
                        </div>
                        <div class="mb-3">
                            <label for="CCCD" class="form-label">CCCD</label>
                            <input type="text" class="form-control" name="CCCD" value="@Model.CCCD">
                        </div>
                        <div class="mb-3">
                            <label for="NoiCap" class="form-label">Nơi cấp CCCD</label>
                            <input type="text" class="form-control" name="NoiCap" value="@Model.NoiCap">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card" style="height:920px">
                    <div class="card-body">
                        <h4 class="card-title">Thông tin công việc</h4>
                        <div class="mb-3">
                            <label for="NgayDK" class="form-label">Ngày đăng ký</label>
                            <input type="date" class="form-control" name="NgayDK" value="@Model.NgayDK.Value.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="mb-3">
                            <label for="NgayKi" class="form-label">Ngày kí hợp đồng</label>
                            <input type="date" class="form-control" name="NgayKi" id="NgayKi">
                        </div>

                        <div class="mb-3">
                            <label for="NgayHetHan" class="form-label">Ngày hết hạn hợp đồng</label>
                            <input type="date" class="form-control" name="NgayHetHan" value="@Model.NgayHetHan.Value.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="mb-3">
                            <label for="ChucVu" class="form-label">Chức vụ</label>
                            <input type="text" class="form-control" name="ChucVu" value="@Model.ChucVu">
                        </div>
                        <div class="mb-3">
                            <label for="GioiTinh" class="form-label">Giới tính</label>
                            <input type="text" class="form-control" name="GioiTinh" value="@Model.GioiTinh">
                        </div>
                        <div class="mb-3">
                            <label for="DanToc" class="form-label">Dân tộc</label>
                            <input type="text" class="form-control" name="DanToc" value="@Model.DanToc">
                        </div>
                        <div class="mb-3">
                            <label for="HocVan" class="form-label">Học vấn</label>
                            <input type="text" class="form-control" name="HocVan" value="@Model.HocVan">
                        </div>
                        <div class="mb-3">
                            <label for="DepartmentID" class="form-label">Mã phòng ban</label>
                            <input type="text" class="form-control" name="DepartmentID" value="@Model.DepartmentID">
                        </div>
                        <div class="mb-3">
                            <label for="TrangThai" class="form-label">Trạng thái</label>
                            <input type="text" class="form-control" name="TrangThai" value="@Model.TrangThai">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" style="margin-top: 20px;text-align: right;">
                    <button style="font-family: VNI-Times;" type="submit" class="btn btn-primary">Sửa nhân viên</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {
        var ngayKi = "@Model.NgayKi.Value.ToString("yyyy-MM-dd")";
        $("#NgayKi").val(ngayKi);
    });
</script>